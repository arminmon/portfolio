{
	"compilerOptions": {
		"target": "ES2018",
		"module": "ESNext",
		"moduleResolution": "Node",
		"lib": ["ES2020", "ESNext", "ESNext.AsyncIterable", "DOM"],
		"esModuleInterop": true,
		"allowJs": true,
		"resolveJsonModule": true,
		"sourceMap": true,
		"strict": true,
		"noEmit": true,
		"baseUrl": ".",
		"paths": {
			"~/*": ["./*"],
			"@/*": ["./*"]
		},
		"types": [
			"@types/node",
			"@nuxt/types",
			"nuxt-property-decorator",
			"@nuxt/content",
			"@nuxtjs/vuetify",
			"nuxt-i18n",
			"vuetify",
			"simple-icons"
		],
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"importHelpers": true
	},
	"include": ["**/*"],
	"exclude": ["node_modules", ".nuxt", "dist"]
}
